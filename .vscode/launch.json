  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: lab_gen app",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/lab_gen/__main__.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
        "name": "Run a Pytest",
        "type": "debugpy",
        "request": "launch",
        "module": "pytest",
        "args": [
            "-vv",
            "${file}"
        ],
        "jinja": true
    }
  ]
}
